<div class="mailchimp-sticky" id="mailchimp-sticky-123">
  <div class="container">
    {# Introduce the form here. #}
    <div class="mailchimp-sticky--label">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <defs>
          <style>.cls-1{fill:#b00;}.cls-2{fill:#fff;}.cls-3{fill:none;}
          </style>
        </defs><title>Asset 173</title><g id="Layer_2" data-name="Layer 2"><g id="Icons_-_Expanded" data-name="Icons - Expanded"><rect class="cls-1" x="3" y="7" width="18" height="11"/><path class="cls-1" d="M20,8v9H4V8H20m2-2H2V19H22V6Z"/><polygon class="cls-2" points="12 15.25 3.4 8.8 4.6 7.2 12 12.75 19.4 7.2 20.6 8.8 12 15.25"/><path class="cls-1" d="M20,8v9H4V8H20m2-2H2V19H22V6Z"/><rect class="cls-3" width="24" height="24"/></g></g></svg>
      <h2>{{ heading }}</h2>
      <p>{{ introduction }}</p>
    </div>

    {# Form will render to the right. #}
    <form action="https://{{ host }}/subscribe/post?u={{ user_id }}&id={{ list_id }}"
          method="post"
          target="_blank"
          novalidate>
      <div class="mailchimp-sticky--form-inner">
        {# Group all the inputs together. #}
        <div class="mailchimp-sticky--inputs">
          {# This is for spam protection. #}
          <div style="position: absolute; left: -5000px;" aria-hidden="true">
            <input type="text" name="b_{{ user_id }}_{{ list_id }}" tabindex="-1" value="">
          </div>

          <label>
            <span style="position: absolute; left: -5000px;">Email Address</span>
            <input type="email" value="" name="EMAIL" class="required email" placeholder="Email address"/>
          </label>
          {% for field,value in hidden %}
            <input type="hidden" name="{{ field }}" value="{{ value }}" />
          {% endfor %}
          <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
        </div>
        <div class="mailchimp-sticky--errors" style="display: none;"></div>
      </div>
    </form>

    {# Show success message only on successful submission. #}
    <div class="mailchimp-sticky--success" style="display: none;">
      {{ success_message }}
    </div>
  </div>
</div>
