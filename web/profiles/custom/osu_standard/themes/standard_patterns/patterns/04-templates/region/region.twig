{#
/**
 * @file
 * Default theme implementation to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 *
 * @ingroup themeable
 */
#}
{% if content %}
  {% if region == 'content_before' %}
    {% include "@templates/region/region-content-before/region-content-before.twig" %}
  {% elseif region == 'content_after' %}
    {% include "@templates/region/region-content-after/region-content-after.twig" %}

  {% else %}
    <div{{ attributes.addClass('region--' ~ region) }}>
      {{ content }}
    </div>

  {% endif %}
{% endif %}
