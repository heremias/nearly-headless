{% set heading_level = entity.heading_level.value|length==2 ? entity.heading_level.value : "h2" %}
<div {{ attributes.addClass(['c-section', class]) }} >

  {% if entity.heading and entity.heading.value %}
    <{{ heading_level }} class="c-section--heading" >{{ entity.heading.value }}</{{ heading_level }}>
  {% endif %}

  {% block component %}
    <div class="c-component--sample">
      This text should be replaced in the template.
    </div>
  {% endblock %}
</div>
