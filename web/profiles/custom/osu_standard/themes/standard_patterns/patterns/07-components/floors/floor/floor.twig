    {% endblock %}
    </div>

    {% if content.link and content.link.0 and content.link.0['#title'] %}
      <div class="c-floor--cta--wrapper">
        <a class="c-floor--cta" href="{{ content.link.0['#url'] }}">{{ content.link.0['#title'] }}</a>
      </div>
    {% endif %}
  </div>
</div>
