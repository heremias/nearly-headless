{% set heading_level = entity.heading_level.value|length==2 ? entity.heading_level.value : "h2" %}
<div {{ attributes.addClass(['c-floor', class, "c-floor--horizontal-" ~ style.horizontal, "c-floor--vertical-" ~ style.vertical]) }} >
  <div class="c-floor--container {% if entity.width.value == 'xwide' %}container{% endif %} ">
    {% if entity.heading and entity.heading.value %}
      <{{ heading_level }} class="c-floor--heading" >{{ entity.heading.value }}</{{ heading_level }}>
    {% endif %}

    {% if entity.introduction.value %}
      <div class="c-floor--introduction">
        {{ entity.introduction.value }}
      </div>
    {% endif %}

    <div class="c-floor--content">
    {% block component %}
